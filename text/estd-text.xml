            <exchange-table>
                <string-pair>
                    <search-string>{{{0}/orig}}</search-string>
                    <replacement-string/>
                </string-pair>
            </exchange-table>
        </normalize>
        <version-id>C.1 4</version-id>
    </compare>
    <collate source="h" mode="single-witness" diff-file="diff2" listing="$diff-list2">
