    <!-- tokens back into tags -->
    <transform source="ktemend" destination="kt-x" option="append">
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <string-pair>
                            <search-string>{{{00}{c:tg}{[}+{]}{00}{c:tg}}}</search-string>
